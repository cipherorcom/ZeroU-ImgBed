# ZeroU图床项目环境配置示例
# ================================
# 复制此文件为 .env 并修改相应配置

# 环境配置
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# 数据库配置
DATABASE_URL="file:./database/app.db"

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_here_please_change_this

# 存储配置
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# CDN配置（可选）
CDN_URL=

# 管理员配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# 图像处理配置
IMAGE_QUALITY=80

# 安全配置
ENABLE_RATE_LIMIT=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 功能配置
ENABLE_REGISTRATION=true
ENABLE_GUEST_UPLOAD=true
